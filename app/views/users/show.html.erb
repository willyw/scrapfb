<%= render :partial => "left_nav" %>

<div id="center">
	
	<% if params[:after_change] %>
		<%= render :partial => "notification", :locals => { :success => params[:success]} %>
	<% end %>
	
	
	
	<div id="profile">
		<p id="profile-image-wrapper">
			<img src="/images/willy_face.jpg" />
			<a href="#" id="change-image">change</a>
		</p>


		<p class="profile-data" id="email-data">
		  <span class="profile-variable">Email</span>
		  <span class="profile-data"><%=h @user.email %></span>
			<!-- <a href="#" class="toggler" toggle_id="change-user-email">change</a> -->
			<!-- It is better for the email to remain constant -->
		</p>
		


		<!-- <% form_for @user, :html => {:id=>"change-user-email"} do |form| %>
